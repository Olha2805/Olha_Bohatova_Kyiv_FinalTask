<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="RegistrationSuite" parallel="tests">
    <test name="rozetka.RegistrationTest" parallel="methods" thread-count="2">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="rozetka.RegistrationTest">
                <methods>
                    <include name="registrationWithAnything"/>
                    <include name="registrationWithNameAndSurname"/>
                    <include name="registrationWithAllCorrectParams"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="rozetka.RegistrationTestFirefox" parallel="methods" thread-count="1">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="rozetka.RegistrationTest">
                <methods>
                    <include name="registrationWithAnything"/>
                    <include name="registrationWithNameAndSurname"/>
                    <include name="registrationWithAllCorrectParams"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>